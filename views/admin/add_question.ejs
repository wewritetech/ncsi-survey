<!-- Main content here -->
<div class="flex-1 lg:p-10 p-2 text-2xl font-bold">

    <!-- Search bar and notification box -->
    <div class="rounded-xl py-4 px-5 3 defaultMidiumColor lg:flex justify-between shadow-lg">
