                <!-- Question Item -->
                <div class="col-span-1">
                    <p class="p-2">Response Type</p>
                    <div class=" col-span-3 rounded space-y-1">
                        <select
                            class="border border-slate-300 w-full rounded-md py-2 pl-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 text-sm"
                            name="radio">
                            <option disabled selected>Radio</option>
                        </select>
                    </div>
                </div>

                <!-- Question Item -->
                <div class="col-span-1">
                    <p class="p-2">Select Section</p>
                    <div class=" col-span-3 rounded space-y-1">
                        <select
                            class="border border-slate-300 w-full rounded-md py-2 pl-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 text-sm"
                            name="radio">
                            <option disabled selected>Section 1</option>
