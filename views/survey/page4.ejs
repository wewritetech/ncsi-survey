<body style="font-family: 'Roboto', sans-serif;">
    <!-- Main content here -->
    <div class="flex-1 lg:p-10 p-2 text-2xl font-bold">

        <!-- Content here -->
        <div class="lg:p-4 bg-white mt-5 lg:rounded-lg rounded-t-3xl">

            <div class="bg-gray-200 defaultLightColor rounded-t-3xl">
                <!-- Logo and Company description -->
                <div class="pt-2 ">
                    <img class="h-24 w-24 border defaultBorderRadius bg-white my-2 m-auto" src="/images/logo.png">
                    <div class="lg:w-2/3 m-auto bg-white text-center lg:rounded-t-3xl py-10 px-2">
                        <p class="lg:text-2xl text-lg">GHANA CUSTOMER SERVICE INDEX SURVEY 2022</p>
                        <p class="text-base">Multi-sector Survey on Customer Service Experience in Nigeria </p>
                    </div>
                </div>
            </div>
            <div class="bg-gray-100  pb-10">
                <!-- Question Container here -->
                <div class="lg:w-2/3 bg-gray-50 m-auto">

                    <!-- Sector titles -->
                    <!--<div class="lg:p-10 p-3">-->
                    <!--    <p class="text-gray-800 text-center">SECTORS OF ORGANIZATIONS</p>-->
                    <!--    <small class="text-sm">A minimum of 30 responses is required for a company to be featured in the-->
                    <!--        Index, and one can complete the survey for as many sectors as possible. A maximum of five-->
                    <!--        (5) is, however, recommended.</small>-->
                    <!--</div>-->

                    <form action="/survey/submit" method="post">
                    <!-- All Questions -->
                        <div class="bg-white">
                            <!-- Question -->
                                <% questions.forEach(element => { %>
                                    <div class="my-4">
                                        <div class="border-l-2 border-orange-400 p-5 lg:pl-10 ">
                                            <p class="text-base">
                                                <%= element.question %> SINGLE RESPONSE <span class="text-red-600">*</span>
                                            </p>
                                            <%if(element.responseType == 'RADIO'){%> 
                                                    <!-- answers -->
                                                    <div class="">
                                                        <% element.answers.forEach((single,index1) => { %>
                                                                <div class="flex items-center">
                                                                    <input class="mr-1" type="radio" name="<%=single.questionId%>"
                                                                        value="<%=single.value %>" required> <br>
                                                                    <label for="default-radio-1" class="ml-2 text-sm font-medium text-gray-900">
                                                                        <%= single.label %>
                                                                    </label>
                                                                </div>
                                                            <% }) %>
                                                    </div>
                                                    <!-- End answers -->
                                            <%}else{%>
                                                <!-- answers -->
                                                    <div class="my-2 flex space-x-5 place-content-center">
                                                        <% element.answers.forEach((single,index1) => { %>
                                                                <div class="flexl items-center mb-1">
                                                                    <input class="mr-1" type="radio" name="<%=single.questionId%>"
                                                                        value="<%=single.value %>" required> <br>
                                                                    <label for="default-radio-1" class="ml-1 text-sm font-medium text-gray-900">
                                                                        <%= single.label %>
                                                                    </label>
                                                                </div>
                                                            <% }) %>
                                                    </div>
                                                    <!-- End answers -->
                                            <%}%>
                                        </div>
                                    </div>
                                <% }) %>
                            <!-- End Question -->
                            <input class="mr-1" type="text" name="1"
                            value='<%=q1%>' required hidden>
                            <input class="mr-1" type="text" name="2"
                            value='<%=q2%>' hidden>
                            <input class="mr-1" type="text" name="3"
                            value='<%=q3%>' required hidden>
                        </div>
                        <!-- Buttons -->
                        <div class="text-center space-x-5 py-5 ">
                            <button onclick="history.back()" class="px-3 py-2 rounded text-base bg-orange-500">Previous</button>
                            <button type="submit" class="px-3 py-2 rounded text-base bg-orange-500">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- End Question -->
            </div>
            <!-- End All Questions -->
        </div>
    </div>

    <div class=" defaultLightColor rounded-b-3xl py-4">
